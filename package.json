{
  "name": "staticman",
  "version": "3.0.0",
  "description": "Static sites with superpowers",
  "main": "index.js",
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "start": "node index.js",
    "test": "standard && jest",
    "test-dev": "TEST_DEV=true jest --watch"
  },
  "engines": {
    "node": ">=8.11.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardoboucas/staticman.git"
  },
  "author": "Eduardo Boucas <mail@eduardoboucas.com> (https://eduardoboucas.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eduardoboucas/staticman/issues"
  },
  "homepage": "https://github.com/eduardoboucas/staticman#readme",
  "dependencies": {
    "@octokit/rest": "^16.3.2",
    "akismet": "^2.0.4",
    "body-parser": "^1.17.x",
    "convict": "^4.3.0",
    "express": "^4.16.4",
    "express-brute": "^1.0.1",
    "express-github-webhook": "^1.0.6",
    "express-recaptcha": "^2.1.0",
    "gitlab": "^3.5.1",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.4.0",
    "mailgun-js": "^0.22.0",
    "markdown-table": "^1.0.0",
    "md5": "^2.1.0",
    "moment": "^2.18.1",
    "node-rsa": "^0.4.2",
    "object-path": "^0.11.4",
    "request-promise": "^4.2.4",
    "sha1": "^1.1.1",
    "slug": "^1.1.0",
    "universal-analytics": "^0.4.20",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "front-matter": "^2.1.2",
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^24.7.1",
    "lodash": "^4.17.11",
    "nock": "^9.0.13",
    "standard": "^10.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "lib/**/*.js",
      "*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "test/**/*"
    ]
  }
}
